{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "src/index.ts",
    "src/lib-index.ts",
    "src/cli/simple-cli.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
